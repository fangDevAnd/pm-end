<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fang.pm.sub.security.mapper.UserMapper">

    <sql id="Base_Column_List">
        id, name, nickName,password,salt,status
    </sql>
    <select id="findByName" parameterType="java.lang.String" resultType="com.fang.pm.sub.base.base.bean.SysUser">
        select
        <include refid="Base_Column_List"/>
        from sys_user u
        where u.name = #{name,jdbcType=VARCHAR}
    </select>

</mapper>
    <modules>
        <module>service-cron</module><!--批处理相关-->
        <module>service-base</module><!--基础库-->
        <module>service-exception</module><!--异常处理-->
        <module>service-security-jwt</module><!--安全校验-->
        <module>service-upload</module><!--文件上传下载-->
        <module>service-crm</module><!--crm系统-->
        <module>service-mail</module><!--邮件服务-->
        <module>service-pm</module><!--包管理工具-->
        <module>service-autotest</module><!--自动化测试-->
        <module>service-baseService</module>
        <module>service-tableGenerator</module><!--基础开发服务-->
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <!--
                1. 这里要指定你的springboot项目的主启动类的全类名
                2. 大家不要把这个插件放到父项目的依赖中，哪个项目需要打包，就放到哪个项目的依赖下
                    -->
                    <mainClass>com.fang.pm.PmApplication</mainClass>
                    <!--
                    使用当前的配置才能构建一个可以相互依赖的mvn工程
                    -->
                    <classifier>exec</classifier>
                </configuration>
            </plugin>

